{
    "name": "vencord",
    "private": "true",
    "version": "1.13.2",
    "description": "The cutest Discord client mod",
    "homepage": "https://github.com/Vendicated/Vencord#readme",
    "bugs": {
        "url": "https://github.com/Vendicated/Vencord/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Vendicated/Vencord.git"
    },
    "license": "GPL-3.0-or-later",
    "author": "Vendicated",
    "scripts": {
        "build": "bun run --require=./scripts/suppressExperimentalWarnings.js scripts/build/build.mjs",
        "buildStandalone": "bun run build --standalone",
        "buildWeb": "bun run --require=./scripts/suppressExperimentalWarnings.js scripts/build/buildWeb.mjs",
        "buildWebStandalone": "bun run buildWeb --standalone",
        "buildReporter": "bun run buildWebStandalone --reporter --skip-extension",
        "buildReporterDesktop": "bun run build --reporter",
        "watch": "bun run build --watch",
        "dev": "bun run watch",
        "watchWeb": "bun run buildWeb --watch",
        "generatePluginJson": "tsx scripts/generatePluginList.ts",
        "generateTypes": "tspc --emitDeclarationOnly --declaration --outDir packages/vencord-types --allowJs false",
        "inject": "bun run scripts/runInstaller.mjs -- --install",
        "uninject": "bun run scripts/runInstaller.mjs -- --uninstall",
        "lint": "eslint",
        "lint-styles": "stylelint \"src/**/*.css\" --ignore-pattern src/userplugins",
        "lint:fix": "bun run lint --fix",
        "test": "bun run buildStandalone && bun run testTsc && bun run lint && bun run lint-styles && bun run generatePluginJson",
        "testWeb": "bun run lint && bun run buildWeb && bun run testTsc",
        "testTsc": "tsc --noEmit"
    },
    "dependencies": {
        "@intrnl/xxhash64": "^0.1.2",
        "@vap/core": "0.0.12",
        "@vap/shiki": "0.10.5",
        "fflate": "^0.8.2",
        "gifenc": "github:mattdesl/gifenc#64842fca317b112a8590f8fef2bf3825da8f6fe3",
        "monaco-editor": "^0.52.2",
        "nanoid": "^5.1.5",
        "virtual-merge": "^1.0.2"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^5.2.3",
        "@types/chrome": "^0.1.4",
        "@types/diff": "^8.0.0",
        "@types/lodash": "^4.17.20",
        "@types/node": "^24.2.1",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@types/yazl": "^3.3.0",
        "@vencord/discord-types": "link:@vencord/discord-types",
        "diff": "^8.0.2",
        "esbuild": "^0.25.9",
        "eslint": "9.33.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-path-alias": "2.1.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-simple-header": "^1.2.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "highlight.js": "11.11.1",
        "html-minifier-terser": "^7.2.0",
        "moment": "^2.30.1",
        "puppeteer-core": "^24.16.2",
        "standalone-electron-types": "^34.2.0",
        "stylelint": "^16.23.1",
        "stylelint-config-standard": "^39.0.0",
        "ts-patch": "^3.3.0",
        "ts-pattern": "^5.8.0",
        "tsx": "^4.20.4",
        "type-fest": "^4.41.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "typescript-transform-paths": "^3.5.5",
        "zip-local": "^0.3.5"
    },
    "packageManager": ">=bun@1.2.0",
    "engines": {
        "node": ">=18"
    }
}
